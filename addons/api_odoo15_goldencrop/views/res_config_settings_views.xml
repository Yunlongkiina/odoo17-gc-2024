<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
		    <field name="name">res.config.settings.view.form.inherit.sale</field>
            <field name="model">res.config.settings</field>
		    <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@data-key='sale_management']" position="inside">
                    <h2>Token Valid Config</h2>
                    <div class="row mt16 o_settings_container" id="token_valid__setting">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Token Autovacuum Hours </span>
                                <div class="text-muted content-group mt16">
                                    <span>Token Autovacuum Hours </span>
                                    <field name="token_valid" class="text-center oe_inline" />
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
